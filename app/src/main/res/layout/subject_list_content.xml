<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/subject_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/background_state_drawable"
    android:animationCache="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:background="@drawable/item_style_background"

        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:translationZ="6dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_margin="4dp"
            android:layout_gravity="center"
            android:weightSum="1"
            android:elevation="0dp">

            <TextView
                android:id="@+id/text_id"
                android:text="ID"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceListItem"
                android:layout_gravity="center_vertical"
                android:layout_margin="6dp"
                android:textStyle="normal|bold"
                android:elevation="0dp"
                android:visibility="visible" />

            <ImageView
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_menu_share"
                android:id="@+id/img_avatar"
                android:showAsAction="ifRoom"
                android:title="Share"
                android:actionProviderClass="android.widget.ShareActionProvider"
                android:layout_width="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:paddingLeft="16dp"
                android:background="@drawable/background_state_drawable"
                android:paddingRight="16dp" />

            <TextView
                android:id="@+id/text_sem"
                android:text="SEM"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceListItem"
                android:layout_gravity="center_vertical"
                android:layout_margin="6dp"
                android:textStyle="normal|bold"
                android:visibility="gone"
                android:layout_weight="1" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/text_name"
                    android:text="SUBJECT_NAME"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:gravity="fill_vertical"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/text_details"
                    android:text="SUBJECT DETAILS INFORMATION"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:gravity="fill_vertical"
                    android:visibility="visible"
                    android:textSize="10sp" />
                <!--android:textAlignment="viewStart"-->

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/text_task_count"
                        android:text="TASK COUNT:"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:gravity="fill_vertical"
                        android:visibility="visible"
                        android:layout_weight="1"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/text_task_done"
                        android:text="TASK DONE:"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:gravity="fill_vertical"
                        android:visibility="visible"
                        android:layout_weight="1"
                        android:textSize="12sp"
                        android:textStyle="normal|bold" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>